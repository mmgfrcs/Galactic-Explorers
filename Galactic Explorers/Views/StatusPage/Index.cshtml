@model GalacticExplorers.Models.StatusCodeModel

@{
    Layout = "_Layout";
    ViewData["Title"] = $"Error {Model.statusCode}";
}

<div class="container text-center">
    <div class="row">
        <div class="col">
            <h1 class="display-1">Error @Model.statusCode</h1>
        </div>
    </div>
    @if (Model.statusCode == "404")
    {
        <div class="row">
            <div class="col">
                <h2>Not Found</h2>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <p>The requested URL is not found on this server</p>
            </div>
        </div>
    }
</div>

